@model ToDo

<div class="modal fade" id="editToDo">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addToDoLabel">Edit To Do Item</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="Edit">
                    <div class="form-group">
                        <label asp-for="ToDoName"></label>
                        <input asp-for="ToDoName" class="form-control" />
                        <span asp-validation-for="ToDoName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ToDoDescription"></label>
                        <input asp-for="ToDoDescription" class="form-control" />
                        <span asp-validation-for="ToDoDescription" class="text-danger"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Update</button>
            </div>

        </div>
    </div>

</div>