@{
    ViewData["Title"] = "Home Page";
}

<head>
    <script src="~/js/exporting.js"></script>
<script src="~/js/highcharts.js"></script>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>


<style>
    .chart {
        height: 200px;
    }

    .spacer {
        height: 20px;
    }

    p {text-align: left; font-size: 25px;}
    

</style>
</head>



<div class="container-fluid">
    
    <div class="row">

   <div class="col-sm-3">
        <div class="col-xs-12" style="height:50px;"></div>
        <div class="col-xs-12" style="height:50px;"></div>

        <p><b>Monthly Expenses:</b></p>
        
         <div class="row">
            <div class="col-sm-7" style="font-size: 20px">@Html.DisplayName("Car Payments:")</div>
            <div class="col-sm-5" style="font-size: 20px">@ViewBag.dataCar1.ToString("C2")</div>
        </div>
        <div class="row">
            <div class="col-sm-7" style="font-size: 20px">@Html.DisplayName("Home Payments:")</div>
            <div class="col-sm-5" style="font-size: 20px">@ViewBag.dataHome1.ToString("C2")</div>
        </div>
        <div class="row">
            <div class="col-sm-7" style="font-size: 20px">@Html.DisplayName("Electronics:")</div>
            <div class="col-sm-5" style="font-size: 20px">@ViewBag.dataElect1.ToString("C2")</div>
        </div>
        <div class="row">
            <div class="col-sm-7" style="font-size: 20px">@Html.DisplayName("Other Expenses:")</div>
            <div class="col-sm-5" style="font-size: 20px">@ViewBag.dataOther1.ToString("C2")</div>
        </div>
        
    </div>    


    <div class="col-sm-9">
<figure class="highcharts-figure">
    <div id="container"></div>
</figure>

    <script>

        $(document).ready(function(){

        $.getJSON("/Home/GetData", function(data){

             Highcharts.chart('container', {
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        title: {
            text: 'Personal Expenses'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        accessibility: {
            point: {
                valueSuffix: '%'
            }
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                }
            }
        },
        series: [{
            name: 'Brands',
            colorByPoint: true,
            data: [{
                name: 'Home',
                y: data.home,
                sliced: true,
                selected: true
            }, {
                name: 'Car',
                y: data.car
            }, {
                name: 'Electronics',
                y: data.electron
            }, {
                name: 'Other',
                y: data.other
            }]
        }]
    });
        });
    });

</script>
</div>

</div>

</div>







   
